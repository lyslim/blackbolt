<%
master_symbol = :gantt
master_name   = 'Gantt'
-%>

<% content_for(:add_scripts) do -%>
<%= javascript_include_tag("components/projects/task_edit_dialog") %>
<%= javascript_include_tag("components/projects/milestone_edit_dialog") %>
<%= javascript_include_tag("components/projects/event_edit_dialog") %>
<%= javascript_include_tag("components/projects/member_select_dialog") %>

<%= javascript_include_tag("components/projects/#{master_symbol}_grid") %>
<%= javascript_include_tag("app/projects/#{master_symbol}") %>
<% end -%>
<% content_for(:add_styles) do -%>
<%= stylesheet_link_tag 'app/css/list_gantt_grid' %>
<% end -%>

<table class="fill">
  <tr>
    <td class="content_header">
      <table>
        <tr>
          <th><h1><%= master_name %></h1></th>
          <td>
            <%= link_to_function( image_tag('/images/btn/task.gif',      {:border => 0, :align=>"absmiddle", :alt=>''}), :id=>'projects_'+master_symbol.to_s+'_btn_add_task' ) %>
            <%= link_to_function( image_tag('/images/btn/milestone.gif', {:border => 0, :align=>"absmiddle", :alt=>''}), :id=>'projects_'+master_symbol.to_s+'_btn_add_milestone', :style=>"margin: 0 5px;" ) %>
            <%= link_to_function( image_tag('/images/btn/event.gif',     {:border => 0, :align=>"absmiddle", :alt=>''}), :id=>'projects_'+master_symbol.to_s+'_btn_add_event' ) %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td class="content_body">
      <div id="<%= master_symbol %>_grid_panel" style="height:100%;border:0px;"></div>
    </td>
  </tr>
</table>
